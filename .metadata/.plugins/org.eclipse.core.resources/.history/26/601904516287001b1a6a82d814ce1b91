package br.com.caicai.modelo;

public class Modelo {

		String nome="";
		Byte maximoPessoas=0;
		Byte andarMaximo=0;
		Byte andarMinimo=0;
		Byte andarAtual=0;
		Byte qtdePessoas=0;

		//pNome --> Preencher Nome
		public void pNome (String param) {
			nome =param;
		}
		public void pMaxPessoas (byte param) {
			maximoPessoas =param;
		}
		public void pAndarMax (byte param) {
			andarMaximo =param;
		}
		public void pAndarMin (byte param) {
			andarMinimo =param;
		}
		
		public void pQntEntrar (byte param) {			
			qtdePessoas = qtdePessoas + param;
		}
//_______________________________________________________________________
		
		public String retornaTudo() {
			return ("Nome: " + nome +"\nMaximo de pessoas: " + maximoPessoas + "\nAndar máximo: " + andarMaximo + "\nAndar mínimo: " + andarMinimo);
		}
		
		
		
		
		
		
		
		
}
